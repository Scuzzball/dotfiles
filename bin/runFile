#!/bin/bash

help() {
    # if arguments, print them
    [ $# == 0 ] || echo -e "err: $*\n"

    echo "$0 *target*"
    echo "run target whenever it changes"

    # if args, exit 1 else exit 0
    [ $# == 0 ] || exit 1
    exit 0
}
Blu="$(tput setaf 4)"
None="$(tput sgr0)"

checkInstalled() {
    tool=$1
    messsage="${2:-I require $tool but it\'s not installed}"
    command -v $tool >/dev/null 2>&1 || die $messsage
}

checkInstalled inotifywait

if [ -z "$1" ]; then
    help "no arguments"
fi

target=$1

if [ ! -x "$target" ]; then
    help "$target isn't an executable file"
fi
runs=0

run(){
    echo "${Blu}run $runs:${None}"
    ./$target
    ((runs=runs+1))
}

# alternate approach
# inotifywait -r -e create --exclude "\.git" -m . -q | grep --line-buffered -E "\.c$|\.h$|\.sh$|\.gnu$"
run
inotifywait -q -e close_write,moved_to,create -m . |
while read -r directory events filename; do
    if [ "$filename" = "$target" ]; then
        run
    fi
done
